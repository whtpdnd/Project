	border-bottom: solid 2px #00B2CF;
	transform: scaleX(0);/*크기를 0으로 줌으로써 평상시엔 밑줄 없음*/
	transition: transform 250ms ease-in-out; /*변형 방식*/
}

.leftmenu a:hover:after 
{
   transform: scaleX(1);/*a 속성에 hover시 기존 크기로*/
